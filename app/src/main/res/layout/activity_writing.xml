<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="ac.sogang.dangol.WritingActivity">

    <RelativeLayout
        android:id="@+id/write_bar"
        style="@style/CustomActionBar">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:onClick="onBackPressed"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="작성"
            android:background="#00000000"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="onSaveClicked"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/contentsLight"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="위치 설정"
                    android:textColor="@color/contents"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                    android:layout_marginRight="10dp"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/write_calendar"
                    android:background="#00FFFFFF"
                    android:textColor="@color/contents"
                    android:onClick="onCalendarClicked"
                    android:layout_gravity="center_vertical"
                    android:gravity="start|center_vertical"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기분"
                android:textColor="@color/contents"
                android:layout_marginLeft="20dp"/>
            <RadioGroup
                android:id="@+id/write_emotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/write_icon1"/>
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/write_icon2"/>
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/write_icon3"/>
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/write_icon4"/>
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/write_icon5"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="날씨"
                android:textColor="@color/contents"
                android:layout_marginLeft="20dp"/>
            <RadioGroup
                android:id="@+id/write_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/write_icon11"/>
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/write_icon12"/>
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/write_icon13"/>
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/write_icon14"/>
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/write_icon15"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="제목"
                android:textColor="@color/contents"
                android:layout_marginLeft="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/write_title"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Write your title"
                android:textColor="@color/contents"
                android:textColorHint="@color/contentsLight"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내용"
                android:textColor="@color/contents"
                android:layout_marginLeft="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/write_contents"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Write your memory"
                android:textColor="@color/contents"
                android:textColorHint="@color/contentsLight"/>

        </LinearLayout>

    </ScrollView></LinearLayout>
